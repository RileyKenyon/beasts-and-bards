<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="@dimen/default_margin"
    android:layout_marginTop="@dimen/default_margin"
    android:layout_marginEnd="@dimen/default_margin"
    tools:context=".dashboard.CreateGameFragment">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/player_filter"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Names"
        android:minHeight="48dp"
        android:padding="@dimen/vertical_padding"
        app:layout_constraintBottom_toBottomOf="@+id/playerGenericText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/playerGenericText"
        app:layout_constraintTop_toTopOf="@+id/playerGenericText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/playerGenericText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/iceberg"
        android:padding="@dimen/vertical_padding"
        android:text="Players: "
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/partyTitle" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/partyTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/groupNameText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorSurface"
            android:fontFamily="@font/iceberg"
            android:hint="Party Title:"
            android:inputType="textShortMessage"
            android:paddingStart="@dimen/vertical_padding"
            android:paddingEnd="@dimen/vertical_padding"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="24sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/playerRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="?attr/colorSurface"
        android:scrollbars="vertical"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerGenericText" />

    <ImageButton
        android:id="@+id/submit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_margin"
        android:layout_marginBottom="4dp"
        android:background="@color/dark_red"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_outline_videogame_black_asset_100"
        tools:ignore="SpeakableTextPresentCheck"
        tools:src="@drawable/ic_outline_videogame_black_asset_100"
        tools:srcCompat="@drawable/ic_outline_videogame_black_asset_100" />

</androidx.constraintlayout.widget.ConstraintLayout>